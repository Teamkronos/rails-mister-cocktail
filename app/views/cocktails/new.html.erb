<div class="container padded">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.error_notification %>
        <%= f.input :name %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "add a cocktail", method: :post, data: { confirm: "You sure of this? you won't be able to remove it later without an admin" }, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

